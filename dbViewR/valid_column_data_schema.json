{
    "$schema": "http://json-schema.org/schema#",
    "title": "valid_column_data_schema",
    "description": "Valid columns and data range for expandDB.R",
    "type": "object",
    "definitions": {
        "census_tract":  {
            "description": "10-digit GEOID for census tracts",
            "type": "number"
        },
        "cra_name": {
            "description": "cra name",
            "type": "string"
        },
        "neighborhood_district_name": {
            "description": "Neighborhood name",
            "type": "string"
        },
        "puma5ce": {
            "description": "PUMA 5 digit ID",
            "type": "number"
        }
    },
    "properties": {
        "individual": {
            "description": "unique identifier for each individual",
            "type": "string"
        },
        "encounter": {
            "description": "unique identifier for each encounter",
            "type": "string"
        },
        "site_type": {
            "description": "sampling location site type",
            "type": "string"
        },
        "sex": {
            "description": "sex",
            "type": "string"
        },
        "flu_shot": {
            "description": "did person recieve flu shot this year",
            "type": "boolean"
        },
        "age": {
            "description": "age in years",
            "type": "number",
            "minimum": 0,
            "maximum": 90
        },
        "age_bin": {
            "description": "age bin in years",
            "type": "number",
            "minimum": 0,
            "maximum": 90
        },
        "residence_census_tract": { "$ref": "#/definitions/census_tract" },
        "residence_cra_name": { "$ref": "#/definitions/cra_name" },
        "residence_neighborhood_district_name": { "$ref": "#/definitions/neighborhood_district_name" },
        "residence_puma5ce": { "$ref": "#/definitions/puma5ce" },
        "work_census_tract": { "$ref": "#/definitions/census_tract" },
        "work_cra_name": { "$ref": "#/definitions/cra_name" },
        "work_neighborhood_district_name": { "$ref": "#/definitions/neighborhood_district_name" },
        "work_puma5ce": { "$ref": "#/definitions/puma5ce" },
        "pathogen": {
            "description": "pathogen type",
            "type": "string"
        },
        "encountered_date": {
            "description": "date of encounter",
            "type": "string",
            "format": "date"
        },
        "encountered_week": {
            "description": "week of encounter",
            "type": "string",
            "pattern": "^[0-9]{4}-W[0-9]{2}$"
        },
       "num_date": {
            "description": "decimal date of encounter (depricated)",
            "type": "number"
        },
        "has_fever": {
            "description": "person self-reported fever",
            "type": "boolean"
        },
        "has_cough": {
            "description": "person self-reported cough",
            "type": "boolean"
        },
        "has_myalgia": {
            "description": "person self-reported muscle aches (myalgia)",
            "type": "boolean"
        },
        "hispanic_or_latino": {
            "description": "person self-reported hispanic or latino",
            "type": "boolean"
        },
        "symptoms": {
            "description": "list of symptoms",
            "type": "string"
        },
        "race": {
            "description": "list of race",
            "type": "string"
        }
    }
}

